<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI_Calculator.BmiResults"
             Title="BMI Results">
    <VerticalStackLayout Spacing="20">
        <Label Text="Calculated BMI:" FontAttributes="Bold"/>
        <Label Text="Empty" x:Name="Label_CalculatedBmi"/>

        <Label Text="BMI Category:" FontAttributes="Bold"/>
        <Label Text="Empty" x:Name="Label_HealthStatus"/>
        <Button Text="View Health Recommendations" Clicked="Button_ViewHealthRecommendations"/>
        <Button Text="Go Back" Clicked="Button_GoBack"/>
    </VerticalStackLayout>
</ContentPage>